<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alertdialog_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/updata_jindu_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_jindu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="@drawable/updata_jindu"
            android:gravity="center_vertical|right"
            android:text="0%"
            android:textColor="@color/white"
            android:textSize="12sp" />


        <LinearLayout
            android:id="@+id/huojian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/xiaohuojian_01" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
